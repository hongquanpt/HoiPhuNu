
@{ 
    var pt = (Web_Girls.Models.Context.PhongTraoThiDua)ViewBag.pt;
}
<div class="modal-content">
     <div class="modal-header">
          <h4 class="modal-title">Cập nhật phong trào thi đua</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
     </div>
     <form id="frmSuaHang" method="post" action="/HoatDong/CapNhatPTTD">
          <div class="modal-body">
               <input type="text" / name="Ma" style="display:none" value="@pt.Ma">
               <div class="form-group">
                    <label for="usr">Tên phong trào thi đua:</label>
                    <input type="text" class="form-control" value="@pt.TenPhongTraoThiDua" name="TenPhongTraoThiDua">
               </div>
               <div class="form-group">
                    <label for="usr">Ngày bắt đầu:</label>
                    <input type="date" class="form-control" value="@pt.NgayBatDau.Value.ToString("yyyy-MM-dd")" name="NgayBatDau">
               </div>
               <div class="form-group">
                    <label for="usr">Ngày kết thúc:</label>
                    <input type="date" class="form-control" value="@pt.NgayKetThuc.Value.ToString("yyyy-MM-dd")" name="NgayKetThuc">
               </div>
               <div class="form-group">
                    <label for="usr">Phần trăm đề cử trên mỗi chi hội:</label>
                    <input type="number" class="form-control" value="@pt.SoLuongDeCu" name="SoLuongDeCu">
               </div>
          </div>
          <div class="modal-footer">
               <button type="submit" class="btn btn-primary" href="#">Thay đổi</button>
               <button type="button" class="btn btn-default" data-dismiss="modal">Hủy bỏ</button>

          </div>
     </form>

</div>
