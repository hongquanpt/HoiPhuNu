
@{
     var hd = (Web_Girls.Models.Context.HoatDong)ViewBag.hd;
}
<div class="modal-content">
     <div class="modal-header">
          <h4 class="modal-title">Cập nhật thông tin hoạt động</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
     </div>
     <form id="frmSuaHang" method="post" action="/HoatDong/SuaHoatDong">
          <div class="modal-body">
               <input type="text" / name="MaHoatDong" style="display:none" value="@hd.MaHoatDong">
               <div class="form-group">
                    <label for="usr">Tên hoạt động:</label>
                    <input type="text" class="form-control" value="@hd.TenHoatDong" name="TenHoatDong">
               </div>
               @if (hd.MaLoaiHoatDong == 3)
               {
                    <div class="form-group">
                         <label for="usr">Số tiền:</label>
                         <input type="number" class="form-control" value="@hd.TongTienThuDuoc" name="TongTienThuDuoc">
                    </div>
               }
               @if (Session["Quyen"].ToString() == "1")
               {
                    <input class="form-control" value="0" name="MaHoi" style="display:none">
               }
               else if (Session["Quyen"].ToString() == "2")
               {
                    <input  class="form-control" value="@Session["MaHoi"]" name="MaHoi"  style="display:none">
               }

          </div>
          <div class="modal-footer">
               <button type="submit" class="btn btn-primary" href="#">Thay đổi</button>
               <button type="button" class="btn btn-default" data-dismiss="modal">Hủy bỏ</button>

          </div>
     </form>

</div>

