@{
     var list = (List<Web_Girls.Models.ModelsView.ThamGiaUngHoView>)ViewBag.thamgia;


}
<div class="modal-content">
     <div class="modal-header">
          <h4 class="modal-title">Danh sách tham gia ủng hộ</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
     </div>
     <div class="modal-body">
          @if (list != null)
          {
               <table class="table table-hover table-bordered text-center">
                    <thead>
                         <tr>
                              <td>Họ tên</td>
                              <td>Thuộc chi hội</td>
                              <td>Số tiền</td>

                         </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in list)
                         {
                              <tr>
                                   <td>@item.TenHV</td>
                                   <td>@item.ChiHoi</td>
                                   <td>@item.SoTien.Value.ToString("N0") VND</td>
                              </tr>
                         }
                    </tbody>
               </table>
          }
          else
          {
               <h2>Chưa có thông tin</h2>
          }


     </div>
</div>





