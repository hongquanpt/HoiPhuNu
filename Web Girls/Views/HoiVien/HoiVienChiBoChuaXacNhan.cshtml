
@{
     ViewBag.Title = "HoiVienChiBoChuaXacNhan";
     Layout = "~/Views/Shared/_LayoutQuanTriCapHoi.cshtml";
     var list = (List<Web_Girls.Models.ModelsView.XacNhanHoiVienChiBo>)ViewBag.list;
}

<div id="page-wrapper">
     <div style="color: #fff; padding: 16px 30px; margin: -20px -25px 10px; border-radius: 3px 3px 0 0; background: #299be4;">
          <div class="row">
               <div class="col-sm-12">
                    <h2 style="font-weight: bold">Danh sách chức vụ chi bộ chưa được xác nhận</h2>
               </div>

          </div>
     </div>
     <div class="table-responsive">
          <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
               <thead>
                    <tr>
                         <th style="display:none">Mã</th>
                         <th>Họ tên</th>
                         <th>Chức vụ cũ</th>
                         <th>Chi bộ cũ</th>
                         <th>Chức vụ mới</th>
                         <th>Chi bộ mới</th>
                         <th>Ngày quyết dịnh</th>
                         <th>Thao Tác</th>
                    </tr>
               </thead>
               <tbody>
                    @foreach (var it in list)
                    {
                         <tr>
                              <td style="display:none">@it.Ma</td>
                              <td>@it.Hoten</td>
                              <td>@it.ChucVuCu</td>
                              <td>@it.ChiBoCu</td>
                              <td>@it.ChucVuMoi</td>
                              <td>@it.ChiBoMoi</td>
                              <td>@it.NgayQD.Value.ToString("dd/MM/yyyy")</td>
                              <td class="center" style="list-style-type: none;">
                                   <a class="btn btn-primary" onclick="PheDuyet(@it.Ma)">Xác nhận</a>
                                   <a class="btn btn-danger" onclick="KhongPheDuyet(@it.Ma)">Không xác nhận</a>
                              </td>
                         </tr>
                    }
               </tbody>
          </table>
          <script>
          function PheDuyet(ma) {
                            Swal.fire({
                                   title: 'Xác nhận?',
                                   showCancelButton: true,
                                   confirmButtonText: 'OK',
                                   denyButtonText: `Hủy`,
                            }).then((result) => {
                                                  /* Read more about isConfirmed, isDenied below */
                                if (result.isConfirmed) {
                                      $.ajax({
                                             url:'/HoiVien/XacNhanHoiVienChiBo',
                                             data: {
                                                  ma: ma
                                             },
                                             type: 'POST',
                                             dataType: 'json',
                                           success: function (res) {
                                                if (res.status == true) {
                                                     alert("Đã xác nhận.");
                                                     window.location = '@Url.Action("HoiVienChiBoChuaXacNhan","HoiVien",new { ma = Session["MaHoi"]})'
                                                }
                                           }
                                      });

                                }
                            })
          }
          function KhongPheDuyet(ma) {
                            Swal.fire({
                                 title: 'Không xác nhận?',
                                   showCancelButton: true,
                                   confirmButtonText: 'Ok',
                                   denyButtonText: `Hủy`,
                            }).then((result) => {
                                                  /* Read more about isConfirmed, isDenied below */
                                if (result.isConfirmed) {
                                      $.ajax({
                                           url:'/HoiVien/XoaHoiVienChiBo',
                                             data: {
                                                  ma: ma
                                             },
                                             type: 'POST',
                                             dataType: 'json',
                                           success: function (res) {
                                                if (res.status == true) {
                                                      window.location = '@Url.Action("HoiVienChiBoChuaXacNhan","HoiVien",new { ma = Session["MaHoi"]})'
                                                }
                                           }

                                      });

                                }
                            })
                     }
          </script>
