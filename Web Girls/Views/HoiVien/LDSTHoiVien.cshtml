                         <tr>
                              <td style="display:none">@it.Ma</td>
                              <td>@it.TenDeTai</td>
                              <td>@it.LoaiDeTai</td>
                              <td>@it.KetQua</td>
                              <td>@it.VaiTro</td>
                              <td>@it.Nam</td>
