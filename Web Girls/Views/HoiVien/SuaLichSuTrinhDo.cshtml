
@{
     var ls = (Web_Girls.Models.Context.LichSuTrinhDo)ViewBag.ls;

}

<!-- Modal content-->
<div class="modal-content">
     <div class="modal-header">
          <h4 class="modal-title">Sửa thông tin trình độ</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
     </div>
     <form id="frmSuaHang" method="post" action="/HoiVien/SuaLichSuTrinhDo">
          <div class="modal-body">
               <input type="text" / name="MaLSTD" style="display:none" value="@ls.MaLSTD">
               <div class="form-group">
                    <label for="usr">Ngày quyết định:</label>
                    <input type="date" class="form-control" value="@ls.NgayQD.Value.ToString("yyyy-MM-dd")" name="NgayQD">
               </div>

          </div>
          <div class="modal-footer">
               <button type="submit" class="btn btn-primary" href="#">Lưu</button>
               <button type="button" class="btn btn-default" data-dismiss="modal">Hủy bỏ</button>

          </div>
     </form>

</div>


