

@{
     var hc = (Web_Girls.Models.Context.HoanCanhGD)ViewBag.hc;

}

<div class="modal-content">
     <div class="modal-header">
          <h4 class="modal-title">Hoàn cảnh hội viên</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
     </div>

     <div class="modal-body">
          <div class="row">
               <input style="display:none" name="MaHV" type="text" class="form-control" value="@hc.MaHV">
               <div class="col-lg-12 d-flex">
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="HoCanNgheo" @(hc.HoCanNgheo == true ? "checked" : "") class="form-control checkbox-item"disabled>
                              <label for="usr">Hộ cận nghèo</label>
                         </div>
                    </div>
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="HoNgheo" @(hc.HoNgheo == true ? "checked" : "") class="form-control checkbox-item"disabled>
                              <label for="usr">Hộ nghèo</label>
                         </div>
                    </div>
               </div>
               <div class="col-lg-12 d-flex">
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="DaCoChong" @(hc.DaCoChong == true ? "checked" : "") class="form-control checkbox-item"disabled>
                              <label for="usr">Đã kết hôn</label>
                         </div>
                    </div>
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="LyHon" @(hc.LyHon == true ? "checked" : "") class="form-control checkbox-item"disabled>
                              <label for="usr">Ly hôn</label>
                         </div>
                    </div>
               </div>
               <div class="col-lg-12 d-flex">
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="MatChongVo" @(hc.MatChongVo == true ? "checked" : "") class="form-control checkbox-item" disabled>
                              <label for="usr">Chồng mất</label>
                         </div>
                    </div>
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="VoChong" @(hc.VoChong == true ? "checked" : "") class="form-control checkbox-item"disabled>
                              <label for="usr">Chồng cùng đơn vị</label>
                         </div>
                    </div>
               </div>
               <div class="col-lg-12 d-flex">
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="ConDuoi16Tuoi" @(hc.ConDuoi16Tuoi == true ? "checked" : "") class="form-control checkbox-item"disabled>
                              <label for="usr">Con dưới 16 tuổi</label>
                         </div>
                    </div>
                    <div class="col-lg-6">
                         <div class="form-group d-flex">
                              <input style="width:40%" type="checkbox" name="MacBenhHiemNghe" @(hc.MacBenhHiemNgheo == true ? "checked" : "") class="form-control checkbox-item"disabled>
                              <label for="usr">Mắc bệnh hiểm nghèo</label>
                         </div>
                    </div>
               </div>

          </div>

     </div>
</div>
