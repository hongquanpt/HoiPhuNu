
@{
    ViewBag.Title = "AddHinhAnh";
    Layout = "~/Views/Shared/_LayoutQuanTriCapHV.cshtml";
}

<div id="page-wrapper">
     <div style="color: #fff; padding: 16px 30px; margin: -20px -25px 10px; border-radius: 3px 3px 0 0; background: #299be4;">
          <div class="row">
               <div class="col-sm-12">
                    <h2 style="font-weight: bold">Thêm mới hình ảnh</h2>
               </div>
          </div>
     </div>
     <form role="form" method="post" action="/TinBai/AddHinhAnh" class="was-validated" enctype="multipart/form-data">
          <div class="row mt-4">
               <div class="col-lg-12 d-flex">
                    <div class="form-group col-lg-2 text-uppercase text-left" style="padding: 5px 5px;">
                         <label>Ảnh</label>
                    </div>
                    <div class="form-group col-lg-5">
                         <input type="file" class="form-control" name="img" id="image1" required>
                         <img class="img-fluid" id="preview1" />
                         <script>
                              image1.onchange = evt1 => {

                                   const [file1] = image1.files

                                   if (file1) {
                                        preview1.src = URL.createObjectURL(file1);
                                        $("#preview1").show();
                                   }
                              }

                         </script>
                    </div>
               </div>
               <div class="col-lg-12 d-flex">
                    <div class="form-group col-lg-2 text-uppercase text-left" style="padding: 5px 5px;">
                         <label>Tiêu đề ảnh</label>
                    </div>
                    <div class="form-group col-lg-5">
                         <textarea class="form-control" placeholder="Tiêu đề ảnh" name="TieuDe" required></textarea>
                    </div>
               </div>
               <button style="margin: 0 auto;  width: 157px;" class="btn btn-primary text-uppercase text-end" type="submit">Lưu</button>
          </div>
     </form>
</div>
